# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=mysecurepassword

# LocalStack/AWS Configuration
AWS_ENDPOINT_URL=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1
S3_BUCKET_RAW=video-raw
S3_BUCKET_PROCESSED=video-processed
SQS_QUEUE_URL=http://localstack:4566/000000000000/processing-queue

# Application Configuration
APP_ENV=development
DEBUG=true
ALLOWED_ORIGINS=*

# Video Processing Settings
FFMPEG_THREADS=4
HLS_SEGMENT_TIME=2
MAX_UPLOAD_SIZE=200MB

# Paths (matching your volume mounts)
LOCAL_UPLOAD_DIR=/app/temp
HLS_OUTPUT_DIR=/app/hls
TRIMMED_OUTPUT_DIR=/app/trimmed

# BullMQ Queue Names
VIDEO_CHANGES_QUEUE=video-changes